<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="menu_colorNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowExitTransition">@transition/slide</item>
    </style>

    <style name="MenuButtonsStyle" parent="Theme.AppCompat">
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorAccent</item>
        <item name="menu_colorNormal">@color/colorAccent</item>
        <item name="menu_colorPressed">@color/colorAccent</item>
        </style>

    <style name="NumberPickerText">
        <item name = "android:textSize">30sp</item>
    </style>

</resources>
